<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/map_layout">

    <FrameLayout android:layout_width="match_parent"
              android:layout_height="0dp"
              android:id="@+id/map_fragment"
              android:layout_weight="1">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="736dp"
                android:id="@+id/imageView2" android:layout_gravity="center" android:src="@drawable/parking"
                android:onClick="onMap1" android:longClickable="false"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/s4b282c2015"
                android:onClick="onUBC"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:id="@+id/button3" android:layout_gravity="center_horizontal|bottom" android:onClick="onClick"/>
    </FrameLayout>

     <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/you"
                android:id="@+id/meLabel"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/out_of_range"
                android:id="@+id/nearestStnLabel"
                android:layout_marginLeft="5dp"/>
     </LinearLayout>
</LinearLayout>